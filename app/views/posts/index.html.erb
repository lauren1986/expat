<%= render 'layouts/inav' %>

<div class="row">
  <div class="large-9 columns" id="main_content">

    <h1>Forum Home</h1>
    <p><em>Find me in app/views/posts/index.html.erb</em></p>

    <div class="row">
        <% @posts.each do |post| %>
        <div class="large-10 columns">
          <h3><%= link_to post.post_title, post %></h3>
          <p><span class="post-meta">Published <%= time_ago_in_words(post.created_at) %> ago by <%= post.user.first_name %> <%= post.user.last_name %></span>
          <br /><i class="fi-price-tag"></i> Category 1, Category 2, Category 3
          <br /><i class="fi-marker"></i> City, State, Country</p>
        </div>
        <div class="large-2 columns">
          <p class="post-meta"><em><%= post.comments.count %> replies</em></p>
        </div>
          <hr />
        <% end %>

        <div class="pagination-centered">
        <%= will_paginate @posts %>
        </div>

        <div class="pagination-centered">
          <ul class="pagination">
            <li class="arrow unavailable"><a href="">&laquo;</a></li>
            <li class="current"><a href="">1</a></li>
            <li><a href="">2</a></li>
            <li><a href="">3</a></li>
            <li><a href="">4</a></li>
            <li class="unavailable"><a href="">&hellip;</a></li>
            <li><a href="">12</a></li>
            <li><a href="">13</a></li>
            <li class="arrow"><a href="">&raquo;</a></li>
          </ul>
        </div>
    </div>

  </div>

  <%= render 'layouts/sideinav' %>

</div>
