<%= render 'layouts/enav' %>

<div class="row">
  <div class="large-9 columns" id="main_content">

    <h1>Sign in</h1>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.email_field :email, autofocus: true, :placeholder => "Enter your email..." %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "off", :placeholder => "Enter your password..." %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Log in", class: "button radius small" %>
      </div>
    <% end %>

    <div class="comment_editing">
      <%= render "devise/shared/links" %>
    </div>

  </div>

</div>
