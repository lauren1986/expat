<%= render 'layouts/enav' %>

<div class="row">
  <div class="large-9 columns" id="main_content">

    <h1>Forgot your password?</h1>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.email_field :email, autofocus: true, :placeholder => "Enter your email address..." %>
      </div>

      <div class="actions">
        <%= f.submit "Send me reset password instructions", class: "button radius small" %>
      </div>
    <% end %>

    <div class="comment_editing">
      <%= render "devise/shared/links" %>
    </div>

  </div>
</div>
